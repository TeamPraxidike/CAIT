generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Difficulty {
  easy
  medium
  hard
}

enum PublicationType {
  Material
  Circuit
}

model User {
  id         Int     @id @default(autoincrement())
  firstName  String
  lastName   String
  username   String  @unique
  email      String
  profilePic String?
  reputation Int     @default(0)

  saved            Publication[]             @relation("saved")
  posts            Publication[]
  liked            Publication[]             @relation("liked")
  usedPublications PublicationUsedInCourse[]

  maintaining Publication[] @relation("maintainers")
  comments    Comment[]
  replies     Reply[]
  isAdmin     Boolean       @default(false)
}

model PublicationUsedInCourse {
  // the user that is using the publication
  userId Int
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)

  publicationId Int
  course        String[]

  @@id([publicationId, userId])
}

model Publication {
  id                 Int        @id @default(autoincrement())
  title              String
  description        String
  maintainers        User[]     @relation("maintainers")
  difficulty         Difficulty
  likes              Int        @default(0)
  tags               Tag[]
  learningObjectives String[]
  createdAt          DateTime   @default(now())
  updatedAt          DateTime   @updatedAt

  comments Comment[]

  publisher   User   @relation(fields: [publisherId], references: [id], onDelete: Cascade)
  publisherId Int
  savedBy     User[] @relation("saved")
  likedBy     User[] @relation("liked")

  reports Int             @default(0)
  type    PublicationType

  node Node[]

  materials Material?
  circuit   Circuit?
}

model Material {
  id             Int     @id @default(autoincrement())
  coverPic       String?
  copyright      Boolean
  timeEstimate   Int?
  theoryPractice Float?
  files          File[]

  publicationId Int         @unique
  publication   Publication @relation(fields: [publicationId], references: [id], onDelete: Cascade)
}

model File {
  path       String   @id
  title      String
  materialId Int
  material   Material @relation(fields: [materialId], references: [id], onDelete: Cascade)
}

model Circuit {
  id            Int         @id @default(autoincrement())
  nodes         Node[]
  publicationId Int         @unique
  publication   Publication @relation(fields: [publicationId], references: [id], onDelete: Cascade)
}

model Node {
  id        Int     @id @default(autoincrement())
  circuitId Int
  circuit   Circuit @relation(fields: [circuitId], references: [id], onDelete: Cascade)

  contentId Int
  content   Publication @relation(fields: [contentId], references: [id], onDelete: Cascade)

  prerequisites Node[] @relation("edge")
  next          Node[] @relation("edge")
}

model Tag {
  id          Int           @id @default(autoincrement())
  content     String
  publication Publication[]
}

model Comment {
  id            Int         @id @default(autoincrement())
  publicationId Int
  publication   Publication @relation(fields: [publicationId], references: [id], onDelete: Cascade)

  userId Int
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)

  replies   Reply[]
  likes     Int      @default(0)
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Reply {
  id Int @id @default(autoincrement())

  commentId Int
  comment   Comment @relation(fields: [commentId], references: [id], onDelete: Cascade)

  userId Int
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)

  likes     Int      @default(0)
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
