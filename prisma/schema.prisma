generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Difficulty {
  easy
  medium
  hard
}

enum MaterialType {
  video
  presentation
  assignment
  dataset
  exam
  code
}

enum PublicationType {
  Material
  Circuit
}

model User {
  id         Int     @id @default(autoincrement())
  firstName  String
  lastName   String
  username   String  @unique @default(uuid())
  email      String
  profilePic String?
  reputation Int     @default(0)

  saved            Publication[]             @relation("saved")
  posts            Publication[]
  liked            Publication[]             @relation("liked")
  usedPublications PublicationUsedInCourse[]

  likedComments    Comment[] @relation("likedComments")
  likedReplies     Reply[] @relation("likedReplies")

  maintaining Publication[] @relation("maintainers")
  comments    Comment[]
  replies     Reply[]
  isAdmin     Boolean       @default(false)
}

model PublicationUsedInCourse {
  // the user that is using the publication
  userId Int
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)

  publicationId Int
  course        String

  @@id([publicationId, course])
}

model Publication {
  id                 Int        @id @default(autoincrement())
  title              String
  description        String
  maintainers        User[]     @relation("maintainers")
  difficulty         Difficulty
  likes              Int        @default(0)
  tags               Tag[]
  learningObjectives String[]
  prerequisites      String[]
  createdAt          DateTime   @default(now())
  updatedAt          DateTime   @updatedAt

  comments Comment[]

  publisher   User   @relation(fields: [publisherId], references: [id], onDelete: Cascade)
  publisherId Int
  savedBy     User[] @relation("saved")
  likedBy     User[] @relation("liked")

  reports Int             @default(0)
  type    PublicationType

  node Node[]

  coverPic   File?   @relation("CoverPic")

  materials Material?
  circuit   Circuit?
}

model Material {
  id                Int          @id @default(autoincrement())
  copyright         Boolean
  encapsulatingType MaterialType @default(presentation)
  timeEstimate      Int?
  theoryPractice    Float?
  files             File[]       @relation("Files")

  publicationId Int         @unique
  publication   Publication @relation(fields: [publicationId], references: [id], onDelete: Cascade)
}

model File {
  path  String @id
  title String
  type  String

  coverId    Int?  @unique
  coverPic   Publication? @relation("CoverPic", fields: [coverId], references: [id], onDelete: Cascade)

  materialId Int?
  material   Material? @relation("Files", fields: [materialId], references: [id], onDelete: Cascade)
}

model Circuit {
  id            Int         @id @default(autoincrement())
  nodes         Node[]
  publicationId Int         @unique
  publication   Publication @relation(fields: [publicationId], references: [id], onDelete: Cascade)
}

model Node {
  id        Int     @id @default(autoincrement())
  circuitId Int
  circuit   Circuit @relation(fields: [circuitId], references: [id], onDelete: Cascade)

  extensions String[]

  publicationId Int
  publication   Publication @relation(fields: [publicationId], references: [id], onDelete: Cascade)

  prerequisites Node[] @relation("edge")
  next          Node[] @relation("edge")
}

model Tag {
  content     String        @id
  publication Publication[]
}

model Comment {
  id            Int         @id @default(autoincrement())
  publicationId Int
  publication   Publication @relation(fields: [publicationId], references: [id], onDelete: Cascade)

  userId Int
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)

  replies   Reply[]
  likes     Int      @default(0)
  likedBy   User[] @relation("likedComments")
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model Reply {
  id Int @id @default(autoincrement())

  commentId Int
  comment   Comment @relation(fields: [commentId], references: [id], onDelete: Cascade)

  userId Int
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)

  likes     Int      @default(0)
  likedBy   User[] @relation("likedReplies")

  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}
