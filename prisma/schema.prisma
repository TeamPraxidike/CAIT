generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["tracing"]
  // previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
  // extensions = [vector]
}

enum Difficulty {
  easy
  medium
  hard
}

enum MaterialType {
  video
  lectureNotes
  slides
  assignment
  examQuestions
  other
}

enum PublicationType {
  Material
  Circuit
}

enum PublicationEventType {
  CREATE   // The Genesis event of the publication
  UPDATE   // Every other event
}

model User {
  id            String    @id @default(uuid()) @db.Uuid
  firstName     String
  lastName      String
  username      String    @unique @default(dbgenerated("gen_random_uuid()"))
  email         String    @default("noemail@abv.bg")
  emailVerified DateTime? // TODO: REMOVE THIS
  reputation    Int       @default(0)
  password      String? // hashed password    // TODO: REMOVE THIS
  aboutMe       String    @default("")
  platformId    String    @default("")
  institutionId String    @default("")

  saved            Publication[]             @relation("saved")
  posts            Publication[]
  liked            Publication[]             @relation("liked")
  reported         Publication[]             @relation("reported")
  usedPublications PublicationUsedInCourse[]

  savedByAllTime SavedByAllTime[]

  likedComments Comment[] @relation("likedComments")
  likedReplies  Reply[]   @relation("likedReplies")

  maintaining Publication[] @relation("maintainers")
  comments    Comment[]
  replies     Reply[]
  isAdmin     Boolean       @default(false)

  profilePic           File?                @relation("ProfilePic")
  courses              Course[]             @relation("CourseInstructors")

  publicationHistory PublicationHistory[]
}

model PublicationUsedInCourse {
  // the user that is using the publication
  userId String @db.Uuid
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  publicationId Int
  publication   Publication @relation(fields: [publicationId], references: [id])

  course String

  @@id([publicationId, course])
}

model Publication {
  id                 Int        @id @default(autoincrement())
  title              String
  description        String
  maintainers        User[]     @relation("maintainers")
  difficulty         Difficulty
  likes              Int        @default(0)
  tags               Tag[]
  learningObjectives String[]
  prerequisites      String[]
  createdAt          DateTime   @default(now())
  updatedAt          DateTime   @updatedAt
  isDraft            Boolean    @default(false)
  courseId           Int?
  course             Course?    @relation("CoursePublications", fields: [courseId], references: [id], onDelete: Cascade)

  comments Comment[]

  publisher   User   @relation(fields: [publisherId], references: [id], onDelete: Cascade)
  publisherId String @db.Uuid
  savedBy     User[] @relation("saved")
  likedBy     User[] @relation("liked")

  reportedBy User[]          @relation("reported")
  type       PublicationType

  node Node[]

  // savedByAllTime String[] @default([])
  savedByAllTime SavedByAllTime[]

  coverPic File? @relation("CoverPic")

  similarToThis SimilarContent[] @relation("ThatSimilarToThis") // like an incoming edge
  thisSimilarTo SimilarContent[] @relation("ThisSimilarToThat") // like an outgoing edge

  materials    Material?
  circuit      Circuit?
  usedInCourse PublicationUsedInCourse[]

  history PublicationHistory[]
}

model PublicationHistory {
  id        String                       @id @default(uuid())
  createdAt DateTime                     @default(now())
  action    PublicationEventType

  // Optional user explanation on the change
  comment String?

  // Snapshot data. We maintain information necessary to the history log (ex. even if a file is deleted we still maintain its name here or last known user name in case of user deletion)
  // Contains: { actorSnapshot, fileChanges: [{ fileName, action, comment }] }
  meta Json?

  // Who made this change: optional so log survives user deletion
  userId String? @db.Uuid
  user   User?   @relation(fields: [userId], references: [id], onDelete: SetNull)

  // Which publication was this log about?
  publicationId Int
  publication   Publication @relation(fields: [publicationId], references: [id], onDelete: Cascade)
}

model SavedByAllTime {
  publicationId Int
  Publication   Publication @relation(fields: [publicationId], references: [id], onDelete: Cascade)
  userId        String      @db.Uuid
  User          User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([publicationId, userId])
}

model SimilarContent {
  similarFromId Int
  similarFrom   Publication @relation("ThisSimilarToThat", fields: [similarFromId], references: [id], onDelete: Cascade)
  similarToId   Int
  similarTo     Publication @relation("ThatSimilarToThis", fields: [similarToId], references: [id], onDelete: Cascade)

  similarity Float

  @@id([similarFromId, similarToId])
}

model Material {
  id                Int          @id @default(autoincrement())
  copyright         String
  encapsulatingType MaterialType
  timeEstimate      Int?
  theoryPractice    Float?
  files             File[]       @relation("Files")
  fileURLs          FileURL[]    @relation("MaterialFileURLs")

  publicationId Int         @unique
  publication   Publication @relation(fields: [publicationId], references: [id], onDelete: Cascade)
}

model FileURL {
  id         Int      @id @default(autoincrement())
  url        String
  name       String
  materialId Int
  material   Material @relation("MaterialFileURLs", fields: [materialId], references: [id], onDelete: Cascade)
}

model File {
  path  String  @id
  title String
  type  String
  text  String?

  userId     String? @unique @db.Uuid
  profilePic User?   @relation("ProfilePic", fields: [userId], references: [id], onDelete: Cascade)

  publicationId Int?         @unique
  coverPic      Publication? @relation("CoverPic", fields: [publicationId], references: [id], onDelete: Cascade)

  courseId       Int?    @unique
  courseCoverPic Course? @relation("CourseCoverPic", fields: [courseId], references: [id], onDelete: Cascade)

  materialId Int?
  material   Material? @relation("Files", fields: [materialId], references: [id], onDelete: Cascade)

  fileChunks FileChunk[]
}

model FileChunk {
  id        BigInt                      @id @default(autoincrement())
  content   String
  metadata  Json
  // Use Unsupported() to tell Prisma to treat this as a native type.
  embedding Unsupported("vector(384)")?
  filePath  String
  file      File                        @relation(fields: [filePath], references: [path], onDelete: Cascade)

  @@index([embedding], map: "filechunk_embedding_index")
}

model Circuit {
  id            Int         @id @default(autoincrement())
  nodes         Node[]
  numNodes      Int         @default(0)
  publicationId Int         @unique
  publication   Publication @relation(fields: [publicationId], references: [id], onDelete: Cascade)
}

model Node {
  circuitId Int
  circuit   Circuit @relation(fields: [circuitId], references: [id], onDelete: Cascade)

  extensions String[]

  publicationId Int
  publication   Publication @relation(fields: [publicationId], references: [id], onDelete: Cascade)

  posX Int
  posY Int

  prerequisites Edge[] @relation("Prereq")
  next          Edge[] @relation("Next")

  @@id([circuitId, publicationId])
}

model Edge {
  circuitId         Int
  fromPublicationId Int
  // toCircuitId Int
  toPublicationId   Int

  // for this relation, the "from" node needs to have its "next" relation updated
  from Node @relation("Next", fields: [circuitId, fromPublicationId], references: [circuitId, publicationId], onDelete: Cascade)
  // for this relation, the "to" node needs to have its "prereq" relation updated
  to   Node @relation("Prereq", fields: [circuitId, toPublicationId], references: [circuitId, publicationId], onDelete: Cascade)

  @@id([circuitId, fromPublicationId, toPublicationId])
}

model Tag {
  content     String        @id
  publication Publication[]
}

model Comment {
  id            Int         @id @default(autoincrement())
  publicationId Int
  publication   Publication @relation(fields: [publicationId], references: [id], onDelete: Cascade)

  userId String @db.Uuid
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  replies   Reply[]
  likes     Int      @default(0)
  likedBy   User[]   @relation("likedComments")
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model Reply {
  id Int @id @default(autoincrement())

  commentId Int
  comment   Comment @relation(fields: [commentId], references: [id], onDelete: Cascade)

  userId String @db.Uuid
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  likes   Int    @default(0)
  likedBy User[] @relation("likedReplies")

  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model Course {
  id                 Int           @id @default(autoincrement())
  learningObjectives String[]
  prerequisites      String[]
  educationalLevel   String
  courseName         String        @unique
  publications       Publication[] @relation("CoursePublications")
  maintainers        User[]        @relation("CourseInstructors")
  coverPic           File?         @relation("CourseCoverPic")
  copyright          String        @default("")
}
